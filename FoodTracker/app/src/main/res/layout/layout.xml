<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="horizontal"
android:layout_width="fill_parent"
android:layout_height="match_parent"
android:onClick="getFood"
    android:weightSum="1">


    <Button
        android:id="@+id/delete_button"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="DELETE"
        android:textColor="#690924"
        android:onClick="deleteFood"
        android:layout_alignBottom="@+id/mealTime"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/dish"
        android:layout_width="80dp"
        android:height="50dp"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="#2f7330"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="56dp"
        android:id="@+id/mealTime"
        android:textSize="30dp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/dish"
        android:layout_toStartOf="@+id/dish" />

